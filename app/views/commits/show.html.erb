<%= link_to("Tree", repo_tree_path(@repo, @commit.tree.id)) %>

<p><%=h @commit.message %></p>

<style type="text/css" media="screen">
  .git_patch { overflow: auto; background: #f8f8ff; border: 1px solid #dedede; margin: 16px 0; }
    .git_patch .path { font: 12px/16px Monaco; background: #eaeaea; padding: 6px 12px; border-bottom: 1px solid #dedede; }
    .git_patch .chunk { }
      .git_patch .chunk .line_numbers { color: #aaaaaa; font: 12px/16px Courier; text-align: right; background: #eaeaea; border-right: 1px solid #dedede; float: left; width: 35px; }
      .git_patch .chunk .line { white-space: pre; font: 12px/16px Courier; padding: 0 12px 0 84px; }
      .git_patch .chunk .line.add { background: #ddffdd; }
      .git_patch .chunk .line.delete { background: #ffdddd; }
</style>

<% if @diff %>
  <%= render :partial => 'git_patch', :collection => @diff.git_patches %>
<% else %>
<pre>
<%=h @repo.grit_repo.diff(@commit.parents.first, @commit) %>
</pre>
<% end %>

